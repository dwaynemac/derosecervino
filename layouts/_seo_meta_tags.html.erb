<meta property="og:title" content="<%= page_title %>"/>
<meta property="og:url" content="<%= base_url %><%= current_page.request_path %>"/>
<meta property="og:site_name" content="DeROSE Method"/>
<meta property="og:type" content="website"/>

<% if (content = current_page.data.fetch("meta_robots", nil)) %>
  <meta name="robots" content="<%= content %>"/>
<% end %>
<% if (content = current_page.data.fetch("meta_description", nil)) %>
  <meta property="og:description" content="<%= content %>"/>
  <meta name="description" content="<%= content %>"/>
<% end %>
<% if (content = current_page.data.fetch("meta_keywords", nil)) %>
  <meta name="keywords" content="<%= content %>"/>
<% end %>
<% if (content = current_page.data.fetch("meta_author", nil)) %>
  <meta name="author" content="<%= content %>"/>
<% end %>
<% if (content = current_page.data.fetch("meta_og_image", nil)) %>
  <meta property="og:image" content="<%= content %>"/>
  <% if (w = current_page.data.fetch("meta_og_image_width", nil)) %>
    <meta name="og:image:width" content="<%= w %>"/>
  <% end %>
  <% if (h = current_page.data.fetch("meta_og_image_height", nil)) %>
    <meta name="og:image:height" content="<%= h %>"/>
  <% end %>
<% else %>
  <!-- default og:image -->
<meta property="og:image" content="<%= base_url %><%= image_path("fotos/og-image.jpg") %>"/>
<% end %>
